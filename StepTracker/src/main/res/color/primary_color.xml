<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Color when the button is pressed -->
    <item android:state_pressed="true" android:color="@color/primary_dark" />

    <!-- Color when the button is focused -->
    <item android:state_focused="true" android:color="@color/primary_light" />

    <!-- Default color (primary color) -->
    <item android:color="@color/primary" />

</selector>
